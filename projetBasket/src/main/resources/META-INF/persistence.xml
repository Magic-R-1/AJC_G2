<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="projetBasket" transaction-type="RESOURCE_LOCAL">
		
		<!-- l'implémentation de JPA utilise -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<properties>
			<!-- La suite de la configuration fonctionne uniquement avec Hibernate -->
			
			<!-- Configuration des Drivers du JDBC -->
			<property name="hibernate.connection.driver" value="com.mysql.cj.jdbc.Driver"/>
			
			<!-- URL -->
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:8889/projetBasket"/>
			<property name="hibernate.connection.user" value="root"/>
			<property name="hibernate.connection.password" value="root"/>
			
			<!-- JPA contrôle la structure de la base -->
			<property name="hibernate.hbm2ddl.auto" value="create"/> <!-- Valide = Contrôle de la structure de la base | Create = Drop puis Create table de nos entités | Update = Controle et voit si il manque des choses dans la base-->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
			
			<!-- Affichage des requêtes -->
			<property name="hibernate.show_sql" value="false"/> <!-- True pour afficher des logs des requêtes, mais pas utile, beaucoup trop d'informations -->
			<property name="hibernate.format_sql" value="true"/> <!-- formater les requêtes SQL des logs ci-dessus si jamais en true -->
			
		</properties>
		
	</persistence-unit>

</persistence>